<Window x:Class="Write.ProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Write"
        mc:Ignorable="d"
        Title="ProjectWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <ToggleButton Name="tcmdFileText" Content="Texts" Checked="tcmdFiles_Checked" Tag="Texts" Margin="0,0,10,0" Focusable="False" Width="65"/>
                <ToggleButton Name="tcmdReferences" Content="References" Checked="tcmdFiles_Checked" Tag="References" Focusable="False" Width="65"/>
                <ToggleButton Name="tcmdTrash" Content="Trash" Checked="tcmdFiles_Checked" Tag="Trash" Margin="10,0,0,0" Focusable="False" Width="65"/>
                <ToggleButton Name="tcmdRefresh" Content="Refresh" Checked="tcmdFiles_Checked" Tag="Refresh" Margin="10,0,0,0" Focusable="False" Width="65"/>
            </StackPanel>
        </StackPanel>

        <ListView Name="lstFiles" Grid.Row="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="400" DisplayMemberBinding="{Binding name}" />
                    <GridViewColumn Header="Date Modified" Width="150" DisplayMemberBinding="{Binding modified}" />
                    <GridViewColumn Header="Date Created" Width="150" DisplayMemberBinding="{Binding created}" />
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="2" Margin="0, 10, 0,0">
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Name="cmdOpenFile" Content="Open File" Click="cmdOpenFile_Click" Margin="0,0,10,0" Focusable="False"/>
                <Button Name="cmdNewFile" Content="New File" Click="cmdNewFile_Click" Focusable="False"/>
                <Button Name="cmdDelete" Content="Delete" Click="cmdDelete_Click" Margin="10,0,0,0" Focusable="False"/>
               
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
