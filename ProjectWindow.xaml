<Window x:Class="Write.ProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Write"
        mc:Ignorable="d"
        Title="ProjectWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="lblNameProject" Text="Example" FontSize="18" FontWeight="Bold"/>

        <StackPanel Grid.Row="1">
            <ListBox Name="lstFiles" Height="200"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Name="cmdOpenFile" Content="Open File" Click="cmdOpenFile_Click" Margin="0,0,10,0" Focusable="False"/>
                <Button Name="cmdNewFile" Content="New File" Click="cmdNewFile_Click" Focusable="False"/>
                <Button Name="cmdDelete" Content="Delete" Click="cmdDelete_Click" Margin="10,0,0,0" Focusable="False"/>
                <Button Name="cmdReaload" Content="Reload" Click="cmdReaload_Click" Margin="10,0,0,0" Focusable="False"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
